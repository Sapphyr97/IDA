{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<center>
<div width="500px" height="500px">
<article class="col-xs-12 maincontent" >
				<header class="page-header">
					<h1 class="page-title">CONNEXION</h1>
				</header>
				
				<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
					<div class="panel panel-default">
						<div class="panel-body">
							<h3 class="thin text-center">Connexion à ton compte</h3>
						

                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                Tu es connecté {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}

                            <div class="top-margin">
                                <label for="inputEmail" >Email <span class="text-danger">*</span></label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            </div>
                            
                                <label for="inputPassword">Mot de Passe<span class="text-danger">*</span></label>
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                            <input type="hidden" name="_csrf_token"
                                value="{{ csrf_token('authenticate') }}"
                            >

                        
                            <div class="row">
                                <div class="col-lg-8">
                                    <b><a href="">Mot de passe oublié</a></b>
                                </div>
                                <br><br><br>
                                <div class="col-lg-4 text-right">
                                    <button class="btn btn-lg btn-primary" type="submit">
                                        Connexion
                                    </button>
                                </div>
                                    <br>
                                    <p class="text-center text-muted">Pour s'inscrire, <a href="{{path("app_register")}}">Inscription</a> </p>
                            </div>

                        </form>

            </div>
        </div>

</div>
				
</article></center>
<div>


{% endblock %}
