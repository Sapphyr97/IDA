{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

	<!-- container -->
	<div class="container">
		<div class="row">
			
			<!-- Article main content -->
			<article class="col-xs-12 maincontent">
				<header class="page-header">
					<center><h1 class="page-title">Inscription</h1><center>
				</header>
				
				<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
					<div class="panel panel-default">
						<div class="panel-body">
							<h3 class="thin text-center">Inscrire un nouveau compte</h3>
							
							<hr>

                                    <center>
                            {{ form_start(registrationForm,) }}

                                   <div class="form-groupe">
									{{ form_row(registrationForm.email,{'attr': {'class': 'form-control'}}) }}
								    </div> <br>

                                     <div class="form-groupe">
                                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
									 </div> <br>

                                     <div class="form-groupe">
                                    {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}  
                                    </div> <br>

                                     <div class="form-groupe">
                                    {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }} 
                                     </div> <br>

                                      <div class="form-groupe">
                                    {{ form_row(registrationForm.datenaissance, {'attr': {'class': 'form-control'}}) }} 
                                     </div> <br>

                                      <div class="form-groupe">
                                    {{ form_row(registrationForm.telephone, {'attr': {'class': 'form-control'}}) }}
                                    </div>   <br>
                                

                                    <center><button type="submit" class="btn btn-lg btn-primary">Enregistrer</button></center>



                                {{ form_end(registrationForm) }}
                                
                                </center>
                               </div> 
							
						</div>
					</div>

				</div>
				
			</article> 
			<!-- /Article -->

		
	</div>	
{% endblock %}
