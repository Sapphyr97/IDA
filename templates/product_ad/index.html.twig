{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.Titre }}</td>
                <td>{{ product.Description }}</td>
                <td>{{ product.Prix }}</td>
                <td>{{ product.Image }}</td>
                <td>
                    <a href="{{ path('app_product_ad_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_product_ad_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_ad_new') }}">Create new</a>
{% endblock %}
